{% extends "AppBundle/layout.html.twig" %}

{% block title %}Group Information{% endblock %}

{% block body %}
    <h1>{{ group.name }}</h1>
    <hr/>
    <ol>
        {% for user in group.users %}
            <li>
                {{ user.name }}
                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
            </li>
        {% endfor %}
    </ol>
{% endblock %}
